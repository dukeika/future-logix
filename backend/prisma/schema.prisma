// backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactSubmission {
  id          String    @id @default(uuid()) // Unique ID for each submission
  fullName    String
  email       String
  phone       String?   // Optional field
  subject     String
  message     String
  createdAt   DateTime  @default(now()) // Auto-sets current timestamp
}

model BlogPost {
  id           String    @id @default(uuid())
  slug         String    @unique // For friendly URLs, must be unique
  title        String
  summary      String?
  content      String // Rich text content, will be stored as HTML or Markdown
  imageUrl     String? // URL to the blog post's featured image (stored in S3 later)
  author       String?
  publishDate  DateTime  @default(now())
  category     String?
  tags         String[]  // Array of strings (e.g., ["cloud", "AI", "business"])
  isFeatured   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt // Auto-updates on every save
}